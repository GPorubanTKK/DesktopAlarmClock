<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.alarmclockv2.HelloController">
    <padding>
        <Insets bottom="0.0" left="0.0" right="0.0" top="0.0"/>
    </padding>

    <Label fx:id="hours"/>
    <Label fx:id="mins"/>
    <Button text="Set Alarm" onAction="#onSetClicked" fx:id="setalarm"/>
    <Button text="Select Audio" fx:id="selaudio" onAction="#onSelectClicked"/>
    <Button text="Remove Alarm" fx:id="kill" onAction="#onKillClicked"/>
    <TextField fx:id="hrfield" promptText="Hours"/>
    <TextField fx:id="minfield" promptText="Minutes"/>
    <Text fx:id="alarmstatus" text="You can sleep in =D"/>
</VBox>
